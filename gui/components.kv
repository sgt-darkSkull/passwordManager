# Rounded Button
<KvRoundButtonUi>:
	background_color: 0,0,0,0
	background_normal: ""
	text: self.button_label_text
	on_press: self.add_flash()
	on_release: self.remove_flash()

	canvas.before:
		Color:
			rgba: root.button_color[0], root.button_color[1], root.button_color[2], 1
		RoundedRectangle:
			id: rect_rounded_cover
			pos: self.pos
			size: self.size
			radius: [dp(40),]


# Text Field
<KvTextFieldUi>:
	halign: 'center'
	padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
	multiline: False