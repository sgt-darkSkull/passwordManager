<CheckGenScreen>:
	BoxLayout:
		orientation: "vertical"
		KvPreviousButtonUi:
			on_release: root.back_main_screen()
		CheckGenScreenLayout:

<CheckGenScreenLayout>:
	cols: 1
	padding: (dp(40), 0, dp(40), dp(20))
	spacing: dp(20)

	Label:
		id: login_label
		text: "Check/Generate Password"
		font_name: "Macondo"
		font_size: dp(30)
	BoxLayout:
		orientation: "vertical"
		padding: (dp(40), 0, dp(40), dp(10))
		Label:
			id: disp_label
			font_name: "Kalam"
			font_size: dp(20)
		Label:
			text: "Enter Password Length or Password:"
			font_name: "Kalam"
			font_size: dp(20)
		KvTextFieldUi:
			id: user_inp_txt
			size_hint: 1, .6
	KvRoundButtonUi:
		text: "Check Password Strength"
		size_hint: .8, .4
		button_color: .6, .2, .2
		on_release: root.check_password()
	KvRoundButtonUi:
		text: "Generate Password"
		size_hint: .8, .4
		button_color: .6, .2, .2
		on_release: root.generate_password()
